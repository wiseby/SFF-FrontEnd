<!DOCTYPE html>
<html>
<head>
    <base href='@Context.Request.PathBase'>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @RenderSection("head", false)
    @RenderSection("styles", false)
</head>
<body>
  <header class="header" id="header">
      <h1>SFF Movies</h1>
  </header>

    <nav class="top-navbar" id="top-navbar">
      <div class="nav-group align-left" style="background-color: royalblue;">
        <a class="button nav-item" id="home-button">Home</a>
        <a class="button nav-item" id="movies-button">Movies</a>
        <a class="button nav-item" id="studios-button">Studios</a>
        <a class="button nav-item" id="log-movies-button">Log Movies</a>
      </div>
      <div class="nav-group align-right">
        <a class="button nav-item" id="login-button">Login</a>
        <a class="button nav-item" id="register-button">Register</a>
    </div>
  </nav>

  <main class="main-content" id="main-content">
    
  </main>

  <div class="container-fluid">
    @RenderBody()
  </div>

  <footer class="footer" id="footer">

  </footer>
  @RenderSection("scripts", false)
</body>
</html>